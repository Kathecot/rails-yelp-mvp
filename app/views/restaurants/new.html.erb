<h1>Crear nuevo restaurant</h1>

<% if @restaurant.errors.any %>
  <ul>
    <% @restaurant.errors.full_messages. each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<div class="form-group">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit class:"btn btn-primary" %>
  <% end %>
</div>
